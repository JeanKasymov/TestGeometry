<Window x:Class="TestGeometry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestGeometry"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate
            x:Key="ElementButtonTemplate">
            <Button>
                <TextBlock
                    Text="{Binding Path=Name}"/>
            </Button>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <StackPanel
            DockPanel.Dock="Left">
        </StackPanel>
        <StackPanel
            DockPanel.Dock="Right">
            <Rectangle 
                Fill="LightBlue" 
                Width="200" 
                Height="100" 
                Margin="10" />
            <Rectangle 
                Fill="LightPink" 
                Width="200" 
                Height="100" 
                RadiusX="15" 
                RadiusY="15" 
                Margin="10" />
        </StackPanel>
        <StackPanel
            DockPanel.Dock="Bottom">
        </StackPanel>
    </DockPanel>
</Window>
